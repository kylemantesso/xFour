{
  "name": "x402-gateway",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "dev": "npm-run-all --parallel dev:*",
    "dev:web": "pnpm --filter @x402/web dev",
    "dev:blockchain": "pnpm --filter @x402-gateway/contracts node",
    "build": "pnpm --filter @x402/web build",
    "build:agent": "pnpm --filter @x402/agent build",
    "build:server": "pnpm --filter @x402/server build",
    "build:sdks": "pnpm run build:agent && pnpm run build:server",
    "lint": "pnpm -r lint",
    "lint:fix": "pnpm -r lint:fix",
    "typecheck": "pnpm --filter @x402/web exec tsc --noEmit && pnpm --filter @x402/agent exec tsc --noEmit && pnpm --filter @x402/server exec tsc --noEmit",
    "clean": "pnpm -r clean",
    "prepare": "husky",
    "encrypt-wif": "pnpm --filter @x402/web encrypt-wif"
  },
  "devDependencies": {
    "husky": "^9.1.7",
    "npm-run-all2": "^5.0.0",
    "typescript": "^5"
  },
  "packageManager": "pnpm@10.24.0",
  "engines": {
    "node": ">=18"
  }
}
